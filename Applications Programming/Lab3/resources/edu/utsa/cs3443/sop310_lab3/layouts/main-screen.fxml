<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600" prefWidth="1205" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.sop310_lab3.MainScreenController">

    <!--  Declare the ToggleGroup OUTSIDE of VBox -->
    <fx:define>
        <ToggleGroup fx:id="actionToggleGroup" />
    </fx:define>

    <!-- TOP: logo + title -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <ImageView fx:id="logoImage" fitHeight="60.0" preserveRatio="true">
                <Image url="@../images/logo.png" />
            <effect>
               <DropShadow blurType="GAUSSIAN" offsetY="2.0" />
            </effect>
            </ImageView>
            <Label style="-fx-font-size: 18px; -fx-text-fill: #0066cc; -fx-font-weight: bold;" text="The Global Emergency Response Organization">
            <cursor>
               <Cursor fx:constant="DEFAULT" />
            </cursor>
            <effect>
               <Glow level="0.46" />
            </effect></Label>
        </HBox>
    </top>

    <!-- LEFT: controls -->
    <left>
        <VBox spacing="12" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="listShipsButton" onAction="#onListShips" text="List Ships" />
            <Label style="-fx-text-fill: #0066cc; -fx-font-weight: bold;" text="Registration Number" />
            <TextField fx:id="registrationTextField" promptText="Enter Number" />

            <!-- Radio Buttons linked to the defined ToggleGroup -->
            <RadioButton fx:id="findRadio" style="-fx-text-fill: #0066cc; -fx-font-weight: bold;" text="Find">
            <toggleGroup>
               <ToggleGroup fx:id="actionToggleGroup" />
            </toggleGroup></RadioButton>
            <RadioButton fx:id="deleteRadio" style="-fx-text-fill: #0066cc; -fx-font-weight: bold;" text="Delete" toggleGroup="$actionToggleGroup" />

            <Button onAction="#onGoClicked" text="Go!" />
        </VBox>
    </left>

    <!-- CENTER: output area -->
    <center>
        <TextArea fx:id="outputArea" editable="false" style="-fx-font-family: 'Consolas'; -fx-font-size: 13px; -fx-line-spacing: 1.3;" wrapText="false">
         <font>
            <Font size="16.0" />
         </font></TextArea>
    </center>

    <!-- BOTTOM: footer -->
    <bottom>
        <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="© 2025 – Property of Fabian Figueroa. Unauthorized cloning of ships (or code) is strictly prohibited by the captain!" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
